<%- include("header") -%>
        <div class="box" id="heading">
            <h2><%= currentDay %></h2>
            <h1><%= listTitle %></h1>
        </div>

        <div class="box">
            <% listItems.forEach((listItem) => { %>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" name="completed" value="<%=listItem._id%>" onChange="this.form.submit()">
                    <p><%=listItem.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </form>
            <% }); %>

            <form class="item" action='/' method="POST">
                <input type="text" placeholder="New item" name="newItem" autocomplete="off">
                <button type="submit" name="list" value="<%= listTitle %>">+</button>
            </form>
        </div>

<%- include("footer") -%>